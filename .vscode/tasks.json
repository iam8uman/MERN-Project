{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "tsc: build - tsconfig.json",
		"type": "shell",
		"command": "tsc",
		"args": ["-p", "tsconfig.json"],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"presentation": {
		  "reveal": "always",
		  "panel": "new"
		},
		"problemMatcher": {
			"owner": "typescript",
			"fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
			  "regexp": "^(.*\\.ts):(\\d+):(\\d+) - (.*)$",
			  "file": 1,
			  "line": 2,
			  "column": 3,
			  "message": 4
			}
		  },
		  
		"isBackground": true,
		"runOptions": {
		  "runOn": "folderOpen"
		}
	  }
	]
  }
  